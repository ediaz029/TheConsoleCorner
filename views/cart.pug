doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title The Console Corner
    link(rel='stylesheet' href='/stylesheets/cart.css')
    script(src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous')
  body
    header
      h1 The Console Corner
      nav
        ul
          li
            a(href='/') HOME
          li
            a(href='/featured') FEATURED
          li.cart
            a(href='/cart')
              i.fas.fa-shopping-cart
              |  CART
    .app-container
    .cart-container 
      if cartItems.length > 0
        each item in cartItems
          .cart-item
            img(src=item.image alt=item.name)
            .item-details
              h4.item-name= item.name
              p.item-description= item.description
              p.item-price $#{item.price}
              .item-quantity
                label(for=`quantity-${item.id}`) Quantity
                input(type='number' value=item.quantity min='1' id=`quantity-${item.id}`)
                button.remove-item(onclick=`removeFromCart(${item.id})`) REMOVE
        .cart-summary
          h3 $999.98
          a(href='/checkout')
            button.checkout-button CHECKOUT

      else
        h3 CART is Empty.
    footer
      p &copy; 2024 The Console Corner
    script(src='/scripts/cart.js')
